<UserControl x:Class="Redcat.Communicator.Views.NewAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label>Username</Label>
        <TextBox Grid.Column="1" />
        <Label Grid.Row="1">Password</Label>
        <PasswordBox Grid.Row="1" Grid.Column="1" />
        <Label Grid.Row="2">Domain</Label>
        <TextBox Grid.Row="2" Grid.Column="1" />
        <Label Grid.Row="3">Resource</Label>
        <TextBox Grid.Row="3" Grid.Column="2" />
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2">
            <Button>OK</Button>
            <Button>Cancel</Button>
        </StackPanel>
    </Grid>
</UserControl>
